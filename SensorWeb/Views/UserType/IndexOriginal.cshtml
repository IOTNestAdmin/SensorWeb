@model IEnumerable<UserTypeModel>

@inject SensorWeb.Resources.CommonLocalizationService localizer


<h4 style="color:white; text-align:center">@localizer.Get("UserTypeTitle") </h4>
<hr />
<p>
    <a href="@Url.Action("Create", "UserType" )" title="@localizer.Get("Add new")">
        <img src="@Url.Content("~/Resources/new_rec_32x32.png")" />
    </a>
</p>
<table class="table sclistTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(modelItem => modelItem.Id)
            </th>
            <th>
                @Html.DisplayNameFor(modelItem => modelItem.Name)
            </th>
            <th class="sccentralize">
                @Html.DisplayNameFor(modelItem => modelItem.UpdatedAt)
            </th>

            <th style="text-align:center">
                @localizer.Get("Actions")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="sctbodyresult">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="sccentralize">
                    @Html.DisplayFor(modelItem => item.UpdatedAtSt)
                </td>
                <td style="text-align:center">

                    @*<partial name="_ListActionsControls" />*@

                    <a href="@Url.Action("Details", "UserType", new { id = item.Id })" title="@localizer.Get("View")" class="links">
                        <img alt="List View" style="height:16px;width:23px;margin-right:15px" src="@Url.Content("~/Resources/visual.png")">
                    </a>
                    <a href="@Url.Action("Edit", "UserType", new { id = item.Id })" title="@localizer.Get("Edit")" class="links">
                        <img alt="List View" style="margin-right: 15px" src="@Url.Content("~/Resources/lapis_16x16.png")">
                    </a>

                    <a href="@Url.Action("Delete", "UserType", new { id = item.Id })" title="@localizer.Get("Delete")" class="links">
                        <img alt="List View" src="@Url.Content("~/Resources/exc_16x16.png")">
                    </a>
                </td>
                <td></td>
            </tr>
        }
    </tbody>
</table>
